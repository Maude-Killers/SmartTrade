{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch blazor",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/Frontend/"
            },
            "command": "dotnet",
            "args": [
                "watch",
                "run",
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "watch css",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/Frontend/"
            },
            "command": "npm",
            "args": [
                "run",
                "watch:css"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Frontend watch",
            "options": {
                "cwd": "${workspaceFolder}/Frontend/"
            },
            "dependsOn": [
                "watch blazor",
                "watch css"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "Backend watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Backend/Backend.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "group": "build",
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}