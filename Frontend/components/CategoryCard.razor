<NavLink href="@($"/category/{uri}")">
    <div class="max-w-sm max-h-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <img class="rounded-t-lg size-full" src="@imgURL" alt="" />
        <div class="p-5">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-center text-gray-900 dark:text-white">@categoryName</h5>
            <p class="mb-3 font-normal text-gray-700 text-center dark:text-gray-400">@categoryDescription</p>
        </div>
    </div>

</NavLink>



@code {
    [Parameter]
    public string imgURL { get; set; } = "";
    [Parameter]
    public string categoryName { get; set; } = "";
    [Parameter]
    public string categoryDescription { get; set; } = "";
    [Parameter]
    public string uri { get; set; } = "";
}
